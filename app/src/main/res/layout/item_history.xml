<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/item_txt_driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Motorista"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/item_txt_ride_history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/item_txt_ride_history_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origem"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/item_txt_ride_history_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destino"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/item_txt_ride_history_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distancia"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/item_txt_ride_history_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempo"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/item_txt_ride_history_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:paddingBottom="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
